
<%- partial('partials/header')%>
<div class="container">
  <h1>My first view</h1>

  <h2>My corndog collection:</h2>
  <div id="app">
    <table class="table table-striped" id="turtable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Peso</th>
          <th>Caparaz&oacute;n</th>
          <th>Plastron</th>
          <th>Nombre Cient&iacute;fico</th>
          <th>Nombre Com&uacute;n</th>
          <th>Nombre de pila</th>
          <th>Estatus</th>
          <th>G&eacute;nero</th>
          <th>Última modificaci&oacute;n</th>
        </tr>
      </thead>
      <tbody>
      <% _.each(turts, function (turtle) { %>
      <tr>
        <td><%= turtle.id %></td>
        <td><%= turtle.weight %></td>
        <td><%= turtle.shell %></td>
        <td><%= turtle.plastron %></td>
        <td><%= turtle.scientificName %></td>
        <td><%= turtle.commonName %></td>
        <td><%= turtle.forename %></td>
        <td><%= turtle.status %></td>
        <td><%= turtle.gender %></td>
        <td><%= turtle.updatedAt %></td>
      </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script type="text/template" id="new-turtle-template">
    <div class="form">
      <div class="row">
        <div class="col-md-6 col-xs-12">
          <div class="form-group">
            <label for="turtle-id">ID</label>
            <input type="text" class="form-control" id="turtle-foreName" placeholder="ID" readonly>
          </div>
          <div class="form-group">
            <label for="turtle-weight">Peso</label>
            <input type="text" class="form-control" id="turtle-weight" placeholder="Peso">
          </div>
          <div class="form-group">
            <label for="turtle-shell">Caparaz&oacute;n</label>
            <input type="text" class="form-control" id="turtle-shell" placeholder="Caparazón">
          </div>
          <div class="form-group">
            <label for="turtle-plastron">Plastron</label>
            <input type="text" class="form-control" id="turtle-shell" placeholder="Plastron">
          </div>
          <div class="form-group">
            <label for="turtle-scientificName">Nombre cient&iacute;fico</label>
            <input type="text" class="form-control" id="turtle-scientificName" placeholder="Nombre científico">
          </div>
          <div class="form-group">
            <label for="turtle-commonName">Nombre com&uacute;n</label>
            <input type="text" class="form-control" id="turtle-commonName" placeholder="Nombre común">
          </div>
          <div class="form-group">
            <label for="turtle-foreName">Nombre de pila</label>
            <input type="text" class="form-control" id="turtle-foreName" placeholder="Nombre de pila">
          </div>
          <div class="form-group">
            <label for="turtle-status">Estatus</label>
            <input type="text" class="form-control" id="turtle-status" placeholder="Estatus">
          </div>
          <div class="form-group">
            <label for="turtle-gender">G&eacute;nero</label>
            <input type="text" class="form-control" id="turtle-gender" placeholder="Género">
          </div>
          <div class="form-group">
            <button class="btn btn-primary">Guardar</button>
          </div>
        </div>
      </div>
    </div>
</script>